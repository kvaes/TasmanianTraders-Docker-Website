{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {    
    "image": {        
        "type": "string",
        "metadata": {
            "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "microsoft/aci-helloworld"
    },
    "imageRegistryLoginServer": {        
        "type": "string",
        "metadata": {
            "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "microsoft/aci-helloworld"
    },
    "imageUsername": {        
        "type": "string",
        "metadata": {
            "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "microsoft/aci-helloworld"
    },
    "imagePassword": {        
        "type": "string",
        "metadata": {
            "description": "Container image to deploy. Should be of the form accountName/imagename:tag for images stored in Docker Hub or a fully qualified URI for a private registry like the Azure Container Registry."
        },
        "defaultValue": "microsoft/aci-helloworld"
    }
  },
  "variables": {
      "cpuCores": "1.0",
      "memoryInGb": "1.5",
      "port": "80",
      "name": "ttwebsite"
  },
  "resources": [
    {
            "name": "[variables('name')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2017-08-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[variables('name')]",
                        "properties": {
                            "image": "[parameters('image')]",
                            "ports": [
                                {
                                    "port": "[variables('port')]" 
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "tcp",
                            "port": "[variables('port')]"
                        }
                    ]
                 },
                "imageRegistryCredentials": [
                {
                    "server": "[parameters('imageRegistryLoginServer')]",
                    "username": "[parameters('imageUsername')]",
                    "password": "[parameters('imagePassword')]"
                }
                ]
            }
        }
  ],
  "outputs": {
     "containerIPv4Address":{
          "type": "string",
          "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', variables('name'))).ipAddress.ip]"
      }
  }
}
